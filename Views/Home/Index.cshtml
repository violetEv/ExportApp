@model List<ExportApp.Models.DataModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h2>Data yang akan diekspor:</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nama</th>
                <th>Tanggal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nama</td>
                    <td>@item.Tanggal.ToString("dd/MM/yyyy")</td>
                </tr>
            }
        </tbody>
    </table>

    <h2>Export Data</h2>
    <a class="btn btn-success" href="/Export/ExportExcel">Download Excel</a>
    <a class="btn btn-danger" href="/Export/ExportPdf">Download PDF</a>
</div>
